pipeline {
    agent any

    stages {
        stage('Clone repo') {
            steps {
                git url: 'https://github.com/lucasgmarcondes/jenkins-nginx.git', branch: 'main'
            }
        }
        stage('Build EC2') {
            steps {
                sh "/var/lib/jenkins/workspace/Pipeline\ infra/deploy.sh"
            }
        }
        stage('Test Nginx') {
            steps {
                sh "/var/lib/jenkins/workspace/Pipeline\ infra/test.sh"
            }
        }
        stage('Build AMI') {
            steps {
                sh "ls -la"
            }
        }
    }
}
